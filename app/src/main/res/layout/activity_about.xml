        android:text="Santana"
        android:textColor="#2f8d4e"
        android:gravity="top|center"
        android:textSize="14pt"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btnGabby"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
