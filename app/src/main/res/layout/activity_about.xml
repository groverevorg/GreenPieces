        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/cullen"
        android:text="Cullen"
        android:textColor="#fcd22a"
        android:gravity="top|center"
        android:textSize="14pt"/>
    <Button
        android:id="@+id/btnAdrian"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/adrian"
        android:text="Adrian"
        android:textColor="#2f8d4e"
        android:gravity="top|center"
        android:textSize="14pt"/>

</LinearLayout>

<LinearLayout android:id="@+id/linearLayout3"
              android:layout_height="fill_parent"
              android:layout_weight="1"
